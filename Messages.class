public class Messages extends Object {
    private string text;
    private string recipient;
    private string sender;
    private bool isGroup;
    private string time;

    public Message(string t, string r, string s, bool i, string t) {
        text = t;
        recipient = r;
        sender = s;
        isGroup = i;
    }

    public static integer submitMessage(string t = this.text, string recipient = this.recipient, string sender = this.sender, bool isGroup = this.isGroup) {
        string time = getTime();
        this.setTime(time);

        // will add message to Message table
        // if isGroup is true, recipient is a groupId; if false, recipient is another user id
        int result = QueryMessages.addMessage(this.text, this.recipient, this.sender, this.isGroup, this.time);

        return result;
    }

    public static void setTime(string t) {
        this.time = t;
    }
}